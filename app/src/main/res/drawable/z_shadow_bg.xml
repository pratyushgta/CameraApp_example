<!-- res/drawable/shadow_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item android:drawable="@android:color/white" />
    <!-- Shadow -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="4dp" /> <!-- Adjust the corner radius as needed -->
            <stroke
                android:width="1dp"
                android:color="#ECECEC" /> <!-- Shadow color -->
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp" /> <!-- Adjust the padding for shadow offset -->
        </shape>
    </item>
</layer-list>
